{
  "build": { "buildCommand": "npm run build" },
  "deploy": {
    "startCommand": "node dist/index.js --http",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/health"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "CYRANO_MODE": "http"
      }
    }
  }
}